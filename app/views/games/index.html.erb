<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Box picture</th>
      <th>Rules</th>
      <th>Components pictures</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= image_tag game.box_picture.variant(resize: "100x100", type: :grayscale).processed %></td>
        <td><%= game.rule.text_rules %></td>
        <td>
          <% game.components.each do |p| %>
              <%= image_tag game.components.pieces.variant(resize: "100x100", type: :grayscale).processed %><br>
          <% end %>
        </td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

