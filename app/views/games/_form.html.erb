<%= form_with(model: game, local: true) do |form| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <div class="field">
    <%= form.label "Rules" %>
    <%= form.text_area :text_rules %>
  </div>

  <div class="field">
    <%= form.label "Rules (PDF)" %>
    <%= form.file_field :pdf_rules %>
  </div>

  <div class="field">
    <%= form.label :box_picture %>
    <%= form.file_field :box_picture %>
  </div>

  <div class="field">
    <%= form.label :components_pictures %>
    <%= form.file_field :pieces, multiple: true %>
  </div>
<% end %>
